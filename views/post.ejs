<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,400;0,700;1,300&display=swap"
      rel="stylesheet"
    />
    <link href="/assets/css/prism.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/index.css" />
    <meta name="theme-color" content="#18212f" />
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#18212f" />
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#18212f" />
    <title><%- title %></title>
  </head>
  <body>
    <nav class="navbar">
      <span class="navbar-toggle" id="js-navbar-toggle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          x="0px"
          y="0px"
          width="20"
          height="20"
          viewBox="0 0 172 172"
          style="fill: #000000"
        >
          <g
            fill="none"
            fill-rule="nonzero"
            stroke="none"
            stroke-width="1"
            stroke-linecap="butt"
            stroke-linejoin="miter"
            stroke-miterlimit="10"
            stroke-dasharray=""
            stroke-dashoffset="0"
            font-family="none"
            font-weight="none"
            font-size="none"
            text-anchor="none"
            style="mix-blend-mode: normal"
          >
            <path d="M0,172v-172h172v172z" fill="none"></path>
            <g fill="#ffffff">
              <path
                d="M0,14.33333v14.33333h172v-14.33333zM0,78.83333v14.33333h172v-14.33333zM0,143.33333v14.33333h172v-14.33333z"
              ></path>
            </g>
          </g>
        </svg>
      </span>
      <a href="/" class="logo large-font">Securely Dark</a>
      <ul class="main-nav" id="js-menu">
        <li>
          <a href="/" class="nav-links">Home</a>
        </li>
        <li>
          <a href="/about" class="nav-links">About me</a>
        </li>
      </ul>
    </nav>
    <div class="article_container">
      <div class="post-content">
        <div class="post-heading">
          <h3><%- title %></h3>
        </div>
        <div class="article_inner_text"><%- content %></div>
      </div>
    </div>

    <!-- comment section -->
    <div class="comments_container">
      <h1 class="b_border">Comments</h1>
      <% comments.forEach(comment => { %>
      <div class="user_comment_container">
        <img
          src="https://ui-avatars.com/api/?background=random&name=<%= comment.username %>&length=1"
          alt="test"
          class="comment_user_img"
        />
        <div class="user_name_and_com">
          <div class="user_name"><%= comment.username %></div>
          <div class="user_comment"><%= comment.comment %></div>
        </div>
      </div>
      <% }); %>
      <form action="/articles/comment" method="POST">
        <div class="input_comment_container">
          <h2>Enter your comment</h2>

          <input
            type="text"
            name="username"
            class="input"
            id="username"
            placeholder="Username"
            minlength="5"
            maxlength="15"
            autocomplete="off"
            required
          />
          <input
            type="text"
            autocomplete="off"
            minlength="4"
            maxlength="500"
            name="comment"
            class="input large"
            placeholder="Type your comment here"
            required
            id="comment"
          />
          <input
            type="hidden"
            id="postId"
            value="<%= postId %>"
            name="postId"
          />

          <button type="submit" class="submit_button">Submit</button>
        </div>
      </form>
    </div>

    <footer><p>Designed & Developed by DarkRider88 &#169;</p></footer>
    <script src="/assets/js/prism.js"></script>
    <script src="prism.js"></script>
    <script>
      let mainNav = document.getElementById("js-menu");
      let navBarToggle = document.getElementById("js-navbar-toggle");
      let navbar = document.querySelector(".navbar");
      navBarToggle.addEventListener("click", function () {
        mainNav.classList.toggle("active");
        navbar.classList.toggle("backColor");
      });
    </script>
  </body>
</html>
