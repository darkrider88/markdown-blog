<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,400;0,700;1,300&display=swap"
      rel="stylesheet"
    />
    <link href="/assets/css/prism.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/index.css" />
    <title><%- title %></title>
  </head>
  <body>
    <nav>
      <div class="link-header">
        <a href="/" class="logo">Securely Dark</a>
        <div class="header-right">
          <a class="active" href="/">Home</a>
          <a href="/about">About</a>
        </div>
      </div>
    </nav>
    <div class="article_container">
      <div class="post-content">
        <div class="post-heading">
          <h3><%- title %></h3>
        </div>
        <div class="article_inner_text"><%- content %></div>
      </div>
    </div>

    <!-- comment section -->
    <div class="comments_container">
      <h1 class="b_border">Comments</h1>
      <% comments.forEach(comment => { %>
      <div class="user_comment_container">
        <img
          src="https://ui-avatars.com/api/?background=random&name=<%= comment.username %>&length=1"
          alt="test"
          class="comment_user_img"
        />
        <div class="user_name_and_com">
          <div class="user_name"><%= comment.username %></div>
          <div class="user_comment"><%= comment.comment %></div>
        </div>
      </div>
      <% }); %>
      <form action="/articles/comment" method="POST">
        <div class="input_comment_container">
          <h2>Enter your comment</h2>

          <input
            type="text"
            name="username"
            class="input"
            id="username"
            placeholder="Username"
            minlength="5"
            maxlength="20"
            autocomplete="off"
            required
          />
          <input
            type="text"
            autocomplete="off"
            minlength="4"
            maxlength="500"
            name="comment"
            class="input large"
            placeholder="Type your comment here"
            required
            id="comment"
          />
          <input
            type="hidden"
            id="postId"
            value="<%= postId %>"
            name="postId"
          />

          <button type="submit" class="submit_button">Submit</button>
        </div>
      </form>
    </div>

    <footer><p>Designed & Developed by DarkRider88 &#169;</p></footer>
    <script src="/assets/js/prism.js"></script>
  </body>
</html>
